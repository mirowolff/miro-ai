{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "agent-frontmatter.schema.json",
  "title": "Claude Code Agent Frontmatter",
  "description": "Schema for validating agent .md frontmatter in Claude Code plugins",
  "type": "object",
  "required": ["description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Agent identifier"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "When to use this agent"
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of agent capabilities"
    },
    "tools": {
      "type": "string",
      "description": "Comma-separated list of available tools"
    },
    "model": {
      "type": "string",
      "enum": ["sonnet", "opus", "haiku"],
      "description": "Model to use for this agent"
    }
  },
  "additionalProperties": true
}
